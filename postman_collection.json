        {
            "name": "Comments",
            "item": [
                {
                    "name": "Create Root Comment",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"content\": \"This is my first comment!\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/comments",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "comments"
                            ]
                        },
                        "description": "Create a root-level comment. Requires authentication."
                    },
                    "response": []
                },
                {
                    "name": "Reply to Comment",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"content\": \"This is a reply to the comment!\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/comments/:id/reply",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "comments",
                                ":id",
                                "reply"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "COMMENT_ID_HERE"
                                }
                            ]
                        },
                        "description": "Reply to a comment or reply (nested replies supported). Replace :id with parent comment ID."
                    },
                    "response": []
                },
                {
                    "name": "Get Root Comments",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/api/comments?page=1&limit=20&sortBy=newest",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "comments"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "20"
                                },
                                {
                                    "key": "sortBy",
                                    "value": "newest",
                                    "description": "Options: newest, oldest, most_liked"
                                }
                            ]
                        },
                        "description": "Get root comments with pagination and sorting. Public endpoint (optional auth for hasLiked/hasDisliked)."
                    },
                    "response": []
                },
                {
                    "name": "Get Replies for Comment",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/api/comments/:id/replies?page=1&limit=20&sortBy=oldest",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "comments",
                                ":id",
                                "replies"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "20"
                                },
                                {
                                    "key": "sortBy",
                                    "value": "oldest",
                                    "description": "Options: newest, oldest, most_liked"
                                }
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "COMMENT_ID_HERE"
                                }
                            ]
                        },
                        "description": "Get replies for a specific comment. Replace :id with comment ID."
                    },
                    "response": []
                },
                {
                    "name": "Update Comment",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}",
                                "type": "text"
                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"content\": \"Updated comment content\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/comments/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "comments",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "COMMENT_ID_HERE"
                                }
                            ]
                        },
                        "description": "Update your own comment. Only the owner can update."
                    },
                    "response": []
                },
                {
                    "name": "Delete Comment",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/comments/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "comments",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "COMMENT_ID_HERE"
                                }
                            ]
                        },
                        "description": "Delete your own comment (soft delete). Only the owner can delete."
                    },
                    "response": []
                },
                {
                    "name": "Like/Unlike Comment",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/comments/:id/like",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "comments",
                                ":id",
                                "like"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "COMMENT_ID_HERE"
                                }
                            ]
                        },
                        "description": "Toggle like on a comment. If already liked, it will unlike. If disliked, removes dislike and adds like. Mutually exclusive with dislike."
                    },
                    "response": []
                },
                {
                    "name": "Dislike/Undislike Comment",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{access_token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/comments/:id/dislike",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "comments",
                                ":id",
                                "dislike"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "COMMENT_ID_HERE"
                                }
                            ]
                        },
                        "description": "Toggle dislike on a comment. If already disliked, it will undislike. If liked, removes like and adds dislike. Mutually exclusive with like."
                    },
                    "response": []
                }
            ]
        },
        {
            "name": "Health Check",
            "item": [
                {
                    "name": "Server Health",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/health",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "health"
                            ]
                        }
                    },
                    "response": []
                }
            ]
        }
    ],
